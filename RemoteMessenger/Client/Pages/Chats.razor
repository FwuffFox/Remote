@page "/chats"
@attribute [Authorize]

<PageTitle>Chats</PageTitle>

@for (int i = 0; i < 10; i++)
{
    var isOnline = i % 2 == 0;
    var message = isOnline ? "Онлайн" : "Оффлайн";
    <Contact Name=@($"Мужик {i}") LastMessage=@($"Я {message} мужик {i}") IsOnline=@isOnline
    ImageSrc="https://mir-s3-cdn-cf.behance.net/project_modules/max_1200/09f66320974015.562f438db41be.jpg"></Contact>
}
